<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @category.name %>
</p>
<% if @category.products.any? %>
  <hr>

  <h3>Product/s</h3>

  <ul>
    <% for product in @category.products %>
      <li>
        <%= link_to product.name, product %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Edit', edit_category_path(@category) %> |
<%= link_to 'Back', categories_path %>
